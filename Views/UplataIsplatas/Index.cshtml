@model IEnumerable<getfitEF.Models.UplataIsplata>

@{
    ViewBag.Title = "Uplate/Isplate";
}

@{
    Layout = "~/Views/Shared/ViewPage1.cshtml";
}
<br />
<br />
<br />
<h2>Ispis uplata i isplata</h2>

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Racunovodja"))
    {
        @Html.ActionLink("Create New", "Create")
    }
}


<table class="table">
    <tr>
        <th>
            Godina
        </th>
        <th>
            Mjesec
        </th>
        <th>
            Uplata
        </th>
        <th>
            Isplata
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SifGodina.Godina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SifMjesec.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uplata)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Isplata)
        </td>


        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Racunovodja"))
            {
                <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        }

    </tr>
     }

</table>
